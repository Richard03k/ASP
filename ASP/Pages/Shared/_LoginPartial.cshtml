@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="form-inline">
        <span class="navbar-text text-dark">Hello, @UserManager.GetUserName(User)!</span>
        <button type="submit" class="btn btn-link text-dark">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
