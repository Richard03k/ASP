<link rel="stylesheet" href="~/css/site.css" />

<div id="Login_box">
    <p id="Text-36px-fw700">Create Account </p>
    <form id="Input_form" method="post">
        <input type="hidden" asp-for="Project.ProjectID" />
        <p id="Input_text">Project Name</p>
