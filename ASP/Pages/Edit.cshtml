        <input asp-for="Project.ClientName" class="input-2" id="Input_spot" placeholder="Client Name">
        <p id="Input_text">Description</p>
        <input asp-for="Project.Description" class="input-3" id="Input_spot" placeholder="Type Something">
        <p id="Input_text">Start Date</p>
        <input asp-for="Project.StartDate" class="input-4" id="Input_spot" placeholder="Start date">
        <p id="Input_text">End Date</p>
        <input asp-for="Project.EndDate" class="input-5" id="Input_spot" placeholder="End date">
        <p id="Input_text">Budget</p>
        <input asp-for="Project.Budget" class="input-6" id="Input_spot" placeholder="0">
        <input asp-for="Project.State" id="Input_spot" placeholder="State">

        <button id="Login_submit" type="submit">edit</button>
    </form>
</div>
