@page "/Edit"
@model RazorAuthDemo.Pages.editModel
@{

}
<link rel="stylesheet" href="~/css/site.css" />

<div id="Create_body">
    <p id="Create_title">Edit Project</p>
    <img id="Create_img" src="~/css/Projec-img.png" />
    <form name="Form_create" id="Create_form" method="post" onsubmit="return Emptycheck()">
        <input type="hidden" asp-for="Project.ProjectID" />
        <p id="Create_text" style="grid-row: 1; grid-column: 1 / 3;">Project Name</p>
        <input asp-for="Project.ProjectName" class="input-1" id="Create_spot" placeholder="Project Name" style="grid-row: 2; grid-column: 1 / 3;">
        <p id="Create_text" style="grid-row: 3; grid-column: 1 / 3;">Client Name</p>
        <input asp-for="Project.ClientName" class="input-2" id="Create_spot" placeholder="Client Name" style="grid-row: 4; grid-column: 1 / 3;">
        <p id="Create_text" style="grid-row: 5; grid-column: 1 / 3;">Description</p>
        <textarea asp-for="Project.Description" class="input-3" id="Create_spot" placeholder="Type something" style="grid-row: 6/8; grid-column: 1 / 3;"></textarea>
        <p id="Create_text" style="grid-row: 9; grid-column: 1;">Start Date</p>
        <input asp-for="Project.StartDate" type="date" class="input-4" id="Create_spot" placeholder="Start date" style="grid-row: 10; grid-column: 1;">
        <p id="Create_text" style="grid-row: 9; grid-column: 2;">End Date</p>
        <input asp-for="Project.EndDate" type="date" class="input-5" id="Create_spot" placeholder="End date" style="grid-row: 10; grid-column: 2;">
        <p id="Create_text" style="grid-row: 11; grid-column: 1 / 3;">Budget</p>
        <input asp-for="Project.Budget" class="input-6" id="Create_spot" placeholder="0" style="grid-row: 12; grid-column: 1 / 3;">
        <select asp-for="Project.State" class="input-7" id="Create_spot" placeholder="State" style="grid-row: 13; grid-column: 1 / 3;">
            <option value="0">Started</option>
            <option value="1">Done</option>
        </select>
        <button id="Create_subbmit" type="submit">Save</button>
    </form>
</div>

