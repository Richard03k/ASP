<script>
    function Emptycheck() {
        let i = 1;
        while(i <= 7) {
            var name = ".input-" + i;
            var check = document.querySelector(name).value;
            if (check == "" || check == null) {
                var temp = document.querySelector(name);
                temp.style.borderColor = "red";
                return false;
            }
            i++;
        }
        return true;
    }
</script>