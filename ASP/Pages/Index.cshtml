@page
@model RazorAuthDemo.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}
<h1>Welcome</h1>
<p>This Razor Pages app uses ASP.NET Identity with LocalDB.</p>

@if (User.Identity?.IsAuthenticated == true)
{
    <p>Hello, @User.Identity.Name!</p>
}
else
{
    <p><a asp-page="/Account/Login">Login</a> or <a asp-page="/Account/Register">Register</a> to get started.</p>
}
