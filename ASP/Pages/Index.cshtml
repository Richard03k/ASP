@model RazorAuthDemo.Pages.IndexModel
@{

}
<link rel="stylesheet" href="~/css/site.css" />

<div id="Login_box">
    <p id="Text-36px-fw700">Create Account </p>
    <form id="Input_form" method="post">
        <p id="Input_text">Full Name</p>
        <input asp-for="Name" id="Input_spot" placeholder="Your full name">
        <p id="Input_text">Email</p>
        <input id="Input_spot" placeholder="Your email address">
        <p id="Input_text">Password</p>
        <input asp-for="Password" id="Input_spot" placeholder="Enter your Password">
        <p id="Input_text"> Confirm Password</p>
        <input id="Input_spot" placeholder="Confirm your Password">
        <button id="Login_submit" asp-page="/Account/Register" type="submit">Create Account</button>
    </form>
    <p id="start_s">Already have an account? <a asp-page="/Index1">Login</a></p>
</div>
