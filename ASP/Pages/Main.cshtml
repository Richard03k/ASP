<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - RazorAuthDemo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">RazorAuthDemo</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><form method="post" asp-page="/Account/Logout"><button class="btn btn-link nav-link">Logout</button></form></li>
                    }
                    else
                    {
                        <a class="nav-link" href="/Identity/Account/Login">Login</a>
                        <a class="nav-link" href="/Identity/Account/Register">Register</a>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container py-4">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
